[sub_resource type="GDScript" id=2]
script/source = "extends Button

onready var stream = $\"../../AudioStreamPlayer\"
var playing = false

func _on_Button_pressed():
	if playing:
		stream.pause()
		playing = false
	else:
		stream.resume()
		playing = true
"

[sub_resource type="GDScript" id=3]
script/source = "extends Button

onready var stream = $\"../../AudioStreamPlayer\"
onready var initial_text = text
var active = true

func _on_Button_pressed():
	if active:
		stream.eval(\"synth.song.channels[0].muted = true\")
		text = initial_text + \" [M]\"
		active = false
	else:
		stream.eval(\"synth.song.channels[0].muted = false\")
		text = initial_text
		active = true
"

